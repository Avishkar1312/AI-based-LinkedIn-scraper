{
    "manifest_version": 3,
    "name": "Tribeca",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "*://www.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "tribeca.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}